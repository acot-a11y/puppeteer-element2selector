{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": ["test/**/*"]
}
